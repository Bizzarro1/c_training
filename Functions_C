/************************************
Some usefull functions in C language.
************************************/

/******************************************************************************

                 Pari o Dispari

*******************************************************************************/

#include <stdio.h>

int main()
{
    
    int value;
    
    printf("Value :");
    scanf("%d", &value);
 switch(value % 2) {
     case 0:
     puts("Even Integer");
     break;
     case 1:
     puts("Odd Integer");
 }

    return 0;
}

/******************************************************************************

                Ciclo Infinito

*******************************************************************************/

#include <stdio.h>

int main()
{
    
    int x;
    
    for(x=100; x>=1; ++x) {
        printf("%d\n", x);
    }
}

/******************************************************************************

                Leggi un intero ed un carattere

*******************************************************************************/

#include <stdio.h>

int main()
{
    
    int intVal;
    char charVal;
    
    scanf("%d", &intVal);
    scanf("\n%c", &charVal);
    printf("Integer: %d\nCharacter: %c\n", intVal, charVal);
}

/******************************************************************************

                Stampa interi dispari da 999 a 1

*******************************************************************************/

#include <stdio.h>

int main()
{
 int x;
    
    for(x = 999; x >= 1; x -= 1) {
        printf("%d\n", x);
    }
}

/******************************************************************************

Stampare interi da 2 a 100

*******************************************************************************/

#include <stdio.h>

int main()
{

int counter = 2;

do {
    if(counter % 2 == 0) {
        printf("%d\n", counter);
    }
    counter += 2;
    } while (counter <= 100);
}

/******************************************************************************

Somma gli interi da 100 a 150 

*******************************************************************************/

#include <stdio.h>

int main()
{
    int total = 0, x;
    
    for (x = 100; x <= 150; ++x) {
        total += x;
        printf("%d", total);
    }
}


